                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/ic_launcher_background"
                android:scaleType="fitXY" />

            <ImageButton
                android:id="@+id/imgbutton_popup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="end"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_launcher_background"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:maxLines="2"
                    android:text="Test Paper"
                    android:textColor="@color/Black"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/varientname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left|top"
                        android:maxLines="2"
                        android:text="Quality"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"

                        android:textColor="@color/Black"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/varientquantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left|top"
                        android:maxLines="2"
                        android:text="Qty"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"

                        android:textColor="@color/Black"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/varientprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left|top"
                        android:maxLines="2"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"

                        android:text="Price"
                        android:textColor="@color/Black"
                        android:textSize="12sp" />



                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/varientnamevalue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left|top"
                        android:maxLines="2"
                        android:text="Quality"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"


                        android:textColor="@color/Black"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/varientquantityvalue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left|top"
                        android:maxLines="2"
                        android:text="NA"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"

                        android:textColor="@color/Black"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/varientpricevalue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left|top"
                        android:maxLines="2"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"

                        android:text="NA"
                        android:textColor="@color/Black"
                        android:textSize="12sp" />



                </LinearLayout>


                    <TextView
                        android:id="@+id/descreption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:maxLines="2"

                        android:text=""
                        android:textColor="@color/Black"
                        android:textSize="12sp" />



                </LinearLayout>



            <LinearLayout
                    android:id="@+id/sub_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:orientation="horizontal">





                </LinearLayout>

                <LinearLayout
